{
  "name": "luci-adapter",
  "display_name": "LuCI",
  "version": "0.0.1",
  "description": "Simple control of a local LuCI-running router",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "homepage": "https://github.com/mozilla-iot/luci-adapter",
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/luci-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/luci-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "node_modules",
    "luci-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "user": "",
      "password": ""
    },
    "schema": {
      "type": "object",
      "required": [],
      "properties": {
        "routers": {
          "type": "array",
          "title": "Routers",
          "items": {
            "type": "object",
            "title": "A router",
            "required": [
              "ip",
              "username",
              "password"
            ],
            "properties": {
              "ip": {
                "type": "string"
              },
              "username": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "devDependencies": {
    "eslint": "^5.12.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  }
}
